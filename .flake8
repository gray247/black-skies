[flake8]
# Keep Black-compatible defaults
max-line-length = 100
extend-ignore = E203, W503

# Donâ€™t lint virtualenvs, caches, node deps, build outputs, etc.
exclude =
    .venv,
    venv,
    env,
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    build,
    dist,
    *.egg-info,
    vendor,
    vendor/wheels
