{
  "name": "@blackskies/app",
  "private": true,
  "version": "1.0.0-rc1",
  "description": "Electron desktop client for the Black Skies writing toolkit.",
  "author": "Black Skies",
  "type": "module",
  "main": "dist-electron/main/main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:renderer": "vite build",
    "build:main": "tsc --project tsconfig.main.json && node ./scripts/write-dist-commonjs.cjs",
    "build:production": "vite build && tsc --project tsconfig.main.json && node ./scripts/write-dist-commonjs.cjs",
    "preview": "vite preview",
    "lint": "node ../scripts/run-app-eslint.mjs",
    "test": "node ../scripts/run-vitest-offline.mjs",
    "package:dir": "vite build && tsc --project tsconfig.main.json && node ./scripts/write-dist-commonjs.cjs && electron-builder --config electron-builder.yml --dir",
    "package:win": "vite build && tsc --project tsconfig.main.json && node ./scripts/write-dist-commonjs.cjs && electron-builder --config electron-builder.yml --win nsis portable",
    "e2e:build": "pnpm run build:production",
    "e2e:test": "pnpm exec playwright test --project=electron --workers=1 --reporter=list --trace=on",
    "e2e:last": "pnpm exec playwright test --last-failed --project=electron --workers=1 --reporter=list --trace=on",
    "e2e": "playwright test -c ./playwright.config.ts",
    "e2e:headed": "playwright test -c ./playwright.config.ts --headed",
    "e2e:report": "playwright show-report",
    "test:e2e": "pnpm run build:renderer && pnpm run build:main && pnpm exec playwright test"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.10.2",
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-mosaic-component": "^6.1.1",
    "react-resizable": "^3.0.5",
    "react-rnd": "^10.4.1",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitest/coverage-v8": "^1.6.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-resizable": "^3.0.8",
    "@types/react-rnd": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.56.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^5.2.8",
    "vitest": "^1.5.2"
  }
}
