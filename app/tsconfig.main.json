{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist-electron",
    "rootDir": "./main",
    "strict": true,
    "noEmit": false,
    "allowJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"],
    "sourceMap": true
  },
  "include": ["main/**/*.ts"],
  "exclude": ["dist", "dist-electron", "node_modules"]
}
